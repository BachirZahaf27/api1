<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign Up</title>
  <!-- BULMA CSS - https://bulma.io/ -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css"
  />
  <link rel="stylesheet" href="./style.css" />
</head>
<body>


<div class="container is-max-desktop">
  <div class="notification is-primary">
    <h1 class="title is-1">Live Climate Change API</h1>
    <form class="box" action="/register" method="POST">
      <div class="field">
        <h1 class="title is-1">Register</h1>
        <label class="label">Name</label>
        <div class="controlt">
          <input class="input" type="text" placeholder="Bachir" id="name" name="name" required>  
        </div>  
      </div>
      <div class="field">
        <label class="label">Email</label>
        <div class="controlt">
          <input class="input" type="email" placeholder="e.g. alex@example.com" id="email" name="email" required>  
        </div>  
      </div>

      <div class="field">
        <label class="label">Password</label>
        <div class="control">
          <input class="input" type="password" placeholder="********" id="password" name="password" required>
        </div>
      </div>
      <button class="button is-primary is-rounded">
        <span class="icon is-large">
          <ion-icon size="large" name="log-in-outline"></ion-icon>
        </span>
        <span>Sign Up</span>
      </button> 
      <p><a href="/login">  Already have an account? Sign Up</a></p>
    
          <% if (messages.error) { %>
            <div class="notification is-danger">
              <button class="delete"></button>
          <%= messages.error %>
        </div>
        <% } %>
     </form>
  </div>
</div>

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
